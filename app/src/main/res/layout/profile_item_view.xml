<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp5w"
    android:layout_marginBottom="@dimen/dp5h"
    android:id="@+id/rl_item_container">
    <ImageView
        android:id="@+id/img_item_image"
        android:layout_width="@dimen/dp25w"
        android:layout_height="@dimen/dp25h"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/dp5h"/>
    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_item_image"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/dp10w"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimary"
        android:text="" />
    <ImageView
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp15h"
        android:layout_alignParentEnd="true"
        android:tint="@color/colorPrimary"
        android:layout_marginTop="@dimen/dp10h" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1h"
        android:layout_marginTop="@dimen/dp25h"
        android:layout_below="@+id/tv_item_title"
        android:background="#ededed"/>
</RelativeLayout>